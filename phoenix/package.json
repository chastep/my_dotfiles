{
  "name": "denolfe-phoenix-config",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec 'pnpm run build'",
    "build": "ncc build src/phoenix.ts -t",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.183",
    "@types/phoenix": "github:mafredri/phoenix-typings#main",
    "@vercel/ncc": "^0.38.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "printWidth": 85,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  }
}
